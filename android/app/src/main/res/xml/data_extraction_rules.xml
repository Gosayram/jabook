<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+)
    
    This file defines what data can be extracted when user transfers app data
    to another device or exports app data.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app settings and preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Include app-specific files (except cache) -->
        <include domain="file" path="." />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
        
        <!-- Exclude database files (user data can be re-synced) -->
        <exclude domain="database" path="." />
        
        <!-- Exclude external storage (user's audiobook files) -->
        <exclude domain="external" path="." />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app settings for device transfer -->
        <include domain="sharedpref" path="." />
        
        <!-- Include app-specific files (except cache) -->
        <include domain="file" path="." />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
        
        <!-- Exclude database files (user data can be re-synced) -->
        <exclude domain="database" path="." />
        
        <!-- Exclude external storage (user's audiobook files) -->
        <exclude domain="external" path="." />
    </device-transfer>
</data-extraction-rules>

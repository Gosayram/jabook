# EditorConfig for Jabook Android project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[*.{kt,kts}]
# Kotlin code style
indent_size = 4
continuation_indent_size = 4

# ktlint configuration for Jetpack Compose
# Disable function naming rule - Composable functions MUST start with uppercase (official Compose convention)
ktlint_standard_function-naming = disabled

# Allow consecutive KDoc comments in routes and documentation files
ktlint_standard_no-consecutive-comments = disabled

[*.xml]
indent_size = 2

[*.gradle.kts]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

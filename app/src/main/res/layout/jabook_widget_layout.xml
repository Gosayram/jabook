<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/appwidget_background">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/jb_cream"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_subtitle_placeholder"
        android:textSize="13sp"
        android:textColor="@color/jb_amber"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:id="@+id/widget_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_previous_24"
            android:tint="@color/jb_cream"
            android:contentDescription="@string/cd_prev" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_arrow_24"
            android:tint="@color/jb_amber"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/cd_play_pause" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next_24"
            android:tint="@color/jb_cream"
            android:contentDescription="@string/cd_next" />

    </LinearLayout>

</LinearLayout>

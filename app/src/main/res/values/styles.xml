<resources>
    <!-- Material3 Button Styles -->
    <style name="Widget.Material3.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.Material3.ButtonToggleGroup" parent="Widget.Material3.ButtonToggleGroup">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material3 CardView Style -->
    <style name="Widget.Material3.CardView.Elevated" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Material3 AlertDialog Theme -->
    <style name="ThemeOverlay.Material3.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/jabook_primary</item>
        <item name="android:textColor">@color/jabook_text</item>
    </style>
</resources>
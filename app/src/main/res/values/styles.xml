<resources>

    <style name="Widget.JaBook.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.JaBook.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.JaBook.ButtonToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.JaBook.Card.Elevated" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- MATERIAL ALERT DIALOG OVERLAY -->
    <style name="ThemeOverlay.JaBook.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/jabook_primary</item>
        <item name="android:textColor">@color/jabook_text</item>
    </style>

</resources>